{
  "extends": ["eslint:recommended", "plugin:prettier/recommended", "next", "next/core-web-vitals"],
  "plugins": ["prettier"],
  "rules": {
    "eqeqeq": "error",
    "no-console": "warn",
    "prettier/prettier": [
      "error",
      { 
        "endOfLine" : "auto"
      }
    ]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "ignorePatterns": ["node_modules", "build", "dist", "public"]
}
